 <Window x:Class="CatenoidDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Catenoid Helicoid Reactor"
        Width="1280" Height="720"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        Loaded="Window_Loaded"
        Closed="Window_Closed">
    <Grid>
        <Grid.Background>
            <!-- Futuristic gradient background -->
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#050816" Offset="0.0"/>
                <GradientStop Color="#141429" Offset="0.4"/>
                <GradientStop Color="#280F3F" Offset="0.7"/>
                <GradientStop Color="#02030A" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Viewport3D x:Name="Viewport">
            <!-- Lights -->
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <Model3DGroup>
                        <AmbientLight Color="#202040"/>
                        <DirectionalLight Color="#90B0FF" Direction="-1,-1,-2"/>
                        <DirectionalLight Color="#FF60C0" Direction="1,0,-1"/>
                    </Model3DGroup>
                </ModelVisual3D.Content>
            </ModelVisual3D>

            <!-- Main 3D model -->
            <ModelVisual3D x:Name="ModelRoot" />

            <!-- Camera -->
            <Viewport3D.Camera>
                <PerspectiveCamera x:Name="Camera"
                                   Position="0,0,8"
                                   LookDirection="0,0,-8"
                                   UpDirection="0,1,0"
                                   FieldOfView="55" />
            </Viewport3D.Camera>
        </Viewport3D>
    </Grid>
</Window>